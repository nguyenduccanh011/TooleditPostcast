<UserControl x:Class="PodcastVideoEditor.Ui.Views.TimelineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PodcastVideoEditor.Ui.Views"
             xmlns:conv="clr-namespace:PodcastVideoEditor.Ui.Converters"
             xmlns:controls="clr-namespace:PodcastVideoEditor.Ui.Controls"
             Background="#1e1e1e"
             Foreground="#e0e0e0"
             Focusable="True">
    <UserControl.InputBindings>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedSegmentCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <conv:DurationDisplayConverter x:Key="DurationDisplayConverter"/>
        <conv:PixelsPerSecondConverter x:Key="PixelsPerSecondConverter"/>
        <conv:TimeValueConverter x:Key="TimeValueConverter"/>
        <!-- Thumb template tối giản: bỏ template mặc định gây khối trắng -->
        <Style x:Key="TransparentThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#2d3a4a"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ResizeThumbStyle" TargetType="Thumb" BasedOn="{StaticResource TransparentThumbStyle}"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ST-3a: Script paste panel -->
        <Expander Grid.Row="0" Header="Script (dán định dạng [start → end] text)" IsExpanded="False"
                  Background="#2d2d2d" Foreground="#e0e0e0" Margin="0,0,0,4">
            <StackPanel Margin="10,8">
                <TextBox Text="{Binding ScriptPasteText, UpdateSourceTrigger=PropertyChanged}"
                         Background="#1e1e1e" Foreground="#e0e0e0" Padding="8,6"
                         BorderBrush="#546e7a" BorderThickness="1"
                         TextWrapping="Wrap" AcceptsReturn="True" Height="120" VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"
                         ToolTip="Ví dụ: [0.00 → 6.04]  Chào mừng đến với podcast..."/>
                <Button Content="Áp dụng script" Command="{Binding ApplyScriptCommand}"
                        HorizontalAlignment="Left" Margin="0,8,0,0"
                        Background="#43a047" Foreground="White" Padding="12,8" MinHeight="32"/>
            </StackPanel>
        </Expander>

        <!-- Status Bar: MinHeight so buttons and text are not clipped -->
        <Border Grid.Row="1" Background="#2d2d2d" Padding="10,8" MinHeight="44">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Timeline:" Margin="0,0,10,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#a0a0a0" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock Text="Playhead:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding PlayheadPosition}" 
                               Foreground="#4fc3f7" VerticalAlignment="Center" FontFamily="Courier New" FontWeight="Bold"/>
                    <TextBlock Text=" / " VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalDuration}" VerticalAlignment="Center"/>
                    <TextBlock Text=" (" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding PixelsPerSecond, Converter={StaticResource PixelsPerSecondConverter}}" 
                               Foreground="#81c784" VerticalAlignment="Center" FontFamily="Courier New"/>
                    <TextBlock Text=")" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Add" Command="{Binding AddSegmentAtPlayheadCommand}"
                            Background="#43a047" Foreground="White" Padding="12,8" MinHeight="32" Margin="0,0,6,0" VerticalContentAlignment="Center"/>
                    <Button Content="Duplicate" Command="{Binding DuplicateSelectedSegmentCommand}"
                            Background="#1e88e5" Foreground="White" Padding="12,8" MinHeight="32" Margin="0,0,6,0" VerticalContentAlignment="Center"/>
                    <Button Content="Delete" Command="{Binding DeleteSelectedSegmentCommand}"
                            Background="#e53935" Foreground="White" Padding="12,8" MinHeight="32" Margin="0,0,6,0" VerticalContentAlignment="Center"/>
                    <Button Content="Clear All" Command="{Binding ClearAllSegmentsCommand}"
                            Background="#6d4c41" Foreground="White" Padding="12,8" MinHeight="32" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Timeline Content: Ctrl+Wheel = zoom, Wheel = pan (scroll) -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" 
                     VerticalScrollBarVisibility="Auto"
                     CanContentScroll="False"
                     x:Name="TimelineScroller"
                     Background="#252525">
            <!-- Grid: col0 = label (56px), col1 = timeline content (align ruler + segment + waveform) -->
            <Grid Width="{Binding TimelineContentWidth}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="56"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="48"/>
                </Grid.RowDefinitions>
                <!-- Row 0: empty label, Ruler -->
                <Border Grid.Row="0" Grid.Column="1" Background="#1a1a1a" Height="40"
                        MouseDown="RulerBorder_MouseDown"
                        MouseMove="RulerBorder_MouseMove"
                        MouseUp="RulerBorder_MouseUp"
                        Cursor="Hand">
                    <controls:TimelineRulerControl x:Name="RulerControl"
                                                   Height="40"
                                                   ClipToBounds="True"
                                                   Width="{Binding TimelineWidth}"
                                                   PixelsPerSecond="{Binding PixelsPerSecond}"
                                                   TotalDuration="{Binding TotalDuration}"/>
                </Border>
                <!-- Row 1: empty label, Segment track -->
                <Canvas Grid.Row="1" Grid.Column="1" Background="#2d2d2d" x:Name="TimelineCanvas"
                       ClipToBounds="True"
                       Width="{Binding TimelineWidth}"
                       Height="200"
                       MouseDown="TimelineCanvas_MouseDown"
                       MouseMove="TimelineCanvas_MouseMove"
                       MouseUp="TimelineCanvas_MouseUp">
                    <ItemsControl ItemsSource="{Binding Segments}" 
                                 x:Name="SegmentsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Background="Transparent" Width="{Binding TimelineWidth}"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="SegmentRoot" Height="60" Cursor="Hand">
                                    <Grid.Effect>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.7"/>
                                    </Grid.Effect>
                                    <Border x:Name="SegmentFill" Background="#2d3a4a" BorderBrush="#43a047" BorderThickness="2,0,2,0"
                                            CornerRadius="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <Grid x:Name="SegmentContentLayer">
                                        <Thumb x:Name="MoveThumb" Style="{StaticResource TransparentThumbStyle}"
                                              Cursor="SizeAll"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Panel.ZIndex="0"
                                              MouseDown="MoveThumb_MouseDown"
                                              DragStarted="MoveThumb_DragStarted"
                                              DragDelta="MoveThumb_DragDelta"
                                              DragCompleted="MoveThumb_DragCompleted"/>
                                        <StackPanel Margin="5" Panel.ZIndex="1" IsHitTestVisible="False" Orientation="Vertical">
                                            <TextBlock Text="Segment" Foreground="#81c784" FontSize="9" Margin="0,0,0,2"/>
                                            <TextBlock Text="{Binding Text}" 
                                                         Foreground="#e0e0e0"
                                                         FontWeight="Bold"
                                                         FontSize="11"
                                                         TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Foreground="#b0bec5"
                                                         FontSize="9">
                                                <Run Text="Duration: "/>
                                                <Run Text="{Binding EndTime, Converter={StaticResource TimeValueConverter}}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding StartTime, Converter={StaticResource TimeValueConverter}}"/>
                                                <Run Text="s"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <Thumb x:Name="ResizeLeftThumb" Style="{StaticResource ResizeThumbStyle}"
                                              HorizontalAlignment="Left"
                                              Width="8"
                                              Cursor="SizeWE"
                                              Opacity="0"
                                              Panel.ZIndex="2"
                                              DragDelta="ResizeLeftThumb_DragDelta"
                                              DragStarted="ResizeLeftThumb_DragStarted"
                                              DragCompleted="ResizeLeftThumb_DragCompleted"/>
                                        <Thumb x:Name="ResizeThumb" Style="{StaticResource ResizeThumbStyle}"
                                              HorizontalAlignment="Right"
                                              Width="8"
                                              Cursor="SizeWE"
                                              Opacity="0"
                                              Panel.ZIndex="2"
                                              DragDelta="ResizeThumb_DragDelta"
                                              DragStarted="ResizeThumb_DragStarted"
                                              DragCompleted="ResizeThumb_DragCompleted"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
                <!-- Row 2: "Audio" label (col0), waveform (col1) - aligned with ruler/segment -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Audio" VerticalAlignment="Center" Margin="8,0"
                           Foreground="#81c784" FontWeight="SemiBold" FontSize="11"/>
                <Border Grid.Row="2" Grid.Column="1" Background="#2a2a2a" BorderBrush="#37474f" BorderThickness="0,1,0,0" Height="48" ClipToBounds="True">
                    <controls:WaveformControl x:Name="WaveformControl"
                                              ClipToBounds="True"
                                              Height="48"
                                              Width="{Binding AudioContentWidth}"
                                              HorizontalAlignment="Left"
                                              Peaks="{Binding AudioPeaks}"
                                              PixelsPerSecond="{Binding PixelsPerSecond}"
                                              TotalDuration="{Binding TotalDuration}"/>
                </Border>
                <!-- Playhead: one line across ruler + segment + audio (288px), drawn on top -->
                <Canvas Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" 
                        Width="{Binding TimelineWidth}" Height="288"
                        IsHitTestVisible="False" ClipToBounds="True">
                    <Line x:Name="PlayheadLine"
                         X1="0" Y1="0" X2="0" Y2="288"
                         Stroke="#64b5f6" StrokeThickness="2"
                         Canvas.Left="0" Canvas.Top="0"
                         StrokeDashArray="5,5"/>
                </Canvas>
            </Grid>
        </ScrollViewer>
    </Grid>

</UserControl>
