<UserControl
    x:Class="PodcastVideoEditor.Ui.Views.RenderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#1E1E1E"
    Foreground="#FFFFFF">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Stretch">
            <!-- Title -->
            <TextBlock
                Text="Render Video"
                FontSize="18"
                FontWeight="Bold"
                Margin="0,0,0,20"
                Foreground="#007ACC" />

            <!-- Resolution Selection -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Resolution:" Margin="0,0,0,5" />
                <ComboBox
                    x:Name="ResolutionComboBox"
                    Height="35"
                    Padding="10"
                    Background="#252526"
                    Foreground="#FFFFFF"
                    BorderBrush="#3E3E42"
                    BorderThickness="1"
                    SelectedItem="{Binding SelectedResolution}"
                    ItemsSource="{Binding ResolutionOptions}" />
            </StackPanel>

            <!-- Aspect Ratio Selection -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Aspect Ratio:" Margin="0,0,0,5" />
                <ComboBox
                    x:Name="AspectRatioComboBox"
                    Height="35"
                    Padding="10"
                    Background="#252526"
                    Foreground="#FFFFFF"
                    BorderBrush="#3E3E42"
                    BorderThickness="1"
                    SelectedItem="{Binding SelectedAspectRatio}"
                    ItemsSource="{Binding AspectRatioOptions}" />
            </StackPanel>

            <!-- Quality Selection -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Quality:" Margin="0,0,0,5" />
                <ComboBox
                    x:Name="QualityComboBox"
                    Height="35"
                    Padding="10"
                    Background="#252526"
                    Foreground="#FFFFFF"
                    BorderBrush="#3E3E42"
                    BorderThickness="1"
                    SelectedItem="{Binding SelectedQuality}"
                    ItemsSource="{Binding QualityOptions}" />
            </StackPanel>

            <!-- Render Progress -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Render Progress:" Margin="0,0,0,5" />
                <ProgressBar
                    Height="30"
                    Maximum="100"
                    Value="{Binding RenderProgress}"
                    Background="#252526"
                    Foreground="#28A745" />
            </StackPanel>

            <!-- Status Message -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Status:" Margin="0,0,0,5" />
                <Border
                    Padding="10"
                    Background="#252526"
                    BorderBrush="#3E3E42"
                    BorderThickness="1">
                    <TextBlock
                        Text="{Binding StatusMessage}"
                        TextWrapping="Wrap"
                        Foreground="#FFFFFF"
                        MinHeight="40" />
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <Grid Height="40" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="RenderButton"
                    Grid.Column="1"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Content="Start Render"
                    Background="#007ACC"
                    Foreground="#FFFFFF"
                    BorderThickness="0"
                    Command="{Binding StartRenderCommand}"
                    CommandParameter="{Binding DataContext.ProjectViewModel.CurrentProject, RelativeSource={RelativeSource AncestorType=Window}}"
                    Cursor="Hand" />

                <Button
                    x:Name="CancelButton"
                    Grid.Column="2"
                    Width="100"
                    Height="35"
                    Content="Cancel"
                    Background="#D13438"
                    Foreground="#FFFFFF"
                    BorderThickness="0"
                    IsEnabled="{Binding CanCancel}"
                    Command="{Binding CancelRenderCommand}"
                    Cursor="Hand" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
