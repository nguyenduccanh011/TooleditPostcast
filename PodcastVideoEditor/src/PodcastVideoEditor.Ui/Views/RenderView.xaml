<UserControl
    x:Class="PodcastVideoEditor.Ui.Views.RenderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#1E1E1E"
    Foreground="#FFFFFF">

    <UserControl.Resources>
        <!-- Compact outline button (same as ratio button under preview) -->
        <Style x:Key="CompactOptionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2D2E"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Stretch">
            <!-- Title -->
            <TextBlock
                Text="Render Video"
                FontSize="18"
                FontWeight="Bold"
                Margin="0,0,0,20"
                Foreground="#007ACC" />

            <!-- Resolution & Quality: compact outline buttons (like ratio under preview) -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Resolution:" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="#CCCCCC" FontSize="12"/>
                <Button x:Name="ResolutionButton" Content="{Binding SelectedResolution}" Style="{StaticResource CompactOptionButtonStyle}"
                        Click="ResolutionButton_Click">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="480p" Command="{Binding SetResolutionCommand}" CommandParameter="480p"/>
                            <MenuItem Header="720p" Command="{Binding SetResolutionCommand}" CommandParameter="720p"/>
                            <MenuItem Header="1080p" Command="{Binding SetResolutionCommand}" CommandParameter="1080p"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <TextBlock Text="Quality:" Margin="20,0,8,0" VerticalAlignment="Center" Foreground="#CCCCCC" FontSize="12"/>
                <Button x:Name="QualityButton" Content="{Binding SelectedQuality}" Style="{StaticResource CompactOptionButtonStyle}"
                        Click="QualityButton_Click">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Low" Command="{Binding SetQualityCommand}" CommandParameter="Low"/>
                            <MenuItem Header="Medium" Command="{Binding SetQualityCommand}" CommandParameter="Medium"/>
                            <MenuItem Header="High" Command="{Binding SetQualityCommand}" CommandParameter="High"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </StackPanel>

            <!-- Render Progress -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Render Progress:" Margin="0,0,0,5" />
                <ProgressBar
                    Height="30"
                    Maximum="100"
                    Value="{Binding RenderProgress}"
                    Background="#252526"
                    Foreground="#28A745" />
            </StackPanel>

            <!-- Status Message -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Status:" Margin="0,0,0,5" />
                <Border
                    Padding="10"
                    Background="#252526"
                    BorderBrush="#3E3E42"
                    BorderThickness="1">
                    <TextBlock
                        Text="{Binding StatusMessage}"
                        TextWrapping="Wrap"
                        Foreground="#FFFFFF"
                        MinHeight="40" />
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <Grid Height="40" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="RenderButton"
                    Grid.Column="1"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Content="Start Render"
                    Background="#007ACC"
                    Foreground="#FFFFFF"
                    BorderThickness="0"
                    Command="{Binding StartRenderCommand}"
                    CommandParameter="{Binding DataContext.ProjectViewModel.CurrentProject, RelativeSource={RelativeSource AncestorType=Window}}"
                    Cursor="Hand" />

                <Button
                    x:Name="CancelButton"
                    Grid.Column="2"
                    Width="100"
                    Height="35"
                    Content="Cancel"
                    Background="#D13438"
                    Foreground="#FFFFFF"
                    BorderThickness="0"
                    IsEnabled="{Binding CanCancel}"
                    Command="{Binding CancelRenderCommand}"
                    Cursor="Hand" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
