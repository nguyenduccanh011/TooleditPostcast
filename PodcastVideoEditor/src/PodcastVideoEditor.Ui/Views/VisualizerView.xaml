<UserControl x:Class="PodcastVideoEditor.Ui.Views.VisualizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800"
             Background="#1e1e1e" Foreground="White"
             Loaded="OnVisualizerLoaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Toolbar -->
        <ToolBar Grid.Row="0" Background="#2d2d2d" ToolBarTray.IsLocked="True" Padding="5">
            <Label Content="Style:" Foreground="White"/>
            <ComboBox ItemsSource="{Binding AvailableStyles}" 
                      SelectedItem="{Binding SelectedStyle}"
                      Width="100" Background="#3e3e3e" Foreground="White"/>
            
            <Separator/>
            <Label Content="Palette:" Foreground="White"/>
            <ComboBox ItemsSource="{Binding AvailablePalettes}" 
                      SelectedItem="{Binding SelectedPalette}"
                      Width="100" Background="#3e3e3e" Foreground="White"/>
            
            <Separator/>
            <Label Content="Bands:" Foreground="White"/>
            <ComboBox ItemsSource="{Binding AvailableBandCounts}" 
                      SelectedItem="{Binding SelectedBandCount}"
                      Width="80" Background="#3e3e3e" Foreground="White"/>
            
            <Separator/>
            <Label Content="Status:" Foreground="White"/>
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" Foreground="#00AA00" Margin="5,0"/>
        </ToolBar>

        <!-- Visualizer Canvas -->
        <Border Grid.Row="1" Background="#2d2d2d" BorderBrush="#404040" BorderThickness="1" MinHeight="220">
            <skia:SKElement x:Name="VisualizerCanvas"
                            MinHeight="200"
                            PaintSurface="OnPaintSurface"/>
        </Border>

        <!-- Info Bar -->
        <StatusBar Grid.Row="2" Background="#2d2d2d" Foreground="#808080" Padding="5">
            <StatusBarItem>
                <TextBlock Text="{Binding VisualizerWidth, StringFormat='Width: {0}px'}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding VisualizerHeight, StringFormat='Height: {0}px'}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding CurrentConfig.BandCount, StringFormat='Bands: {0}'}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding IsVisualizerRunning, StringFormat='Running: {0}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
