<UserControl x:Class="PodcastVideoEditor.Ui.Views.CanvasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:views="clr-namespace:PodcastVideoEditor.Ui.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#1e1e1e" Foreground="White"
             KeyDown="OnCanvasKeyDown"
             FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">

    <UserControl.Resources>
        <!-- Template for generic elements (Logo, Image, etc.) - shows Name -->
        <DataTemplate x:Key="DefaultElementTemplate">
            <Border Width="{Binding Width}"
                    Height="{Binding Height}"
                    Background="#333333"
                    BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                    BorderThickness="2"
                    MouseDown="OnCanvasElementMouseDown">
                <TextBlock Text="{Binding Name}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="12"/>
            </Border>
        </DataTemplate>
        <!-- TitleElement: displays Text with FontSize, FontFamily, ColorHex, etc. -->
        <DataTemplate x:Key="TitleElementTemplate">
            <Border Width="{Binding Width}"
                    Height="{Binding Height}"
                    Background="#333333"
                    BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                    BorderThickness="2"
                    MouseDown="OnCanvasElementMouseDown">
                <TextBlock Text="{Binding Text}"
                           Foreground="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}"
                           FontFamily="{Binding FontFamily}"
                           FontSize="{Binding FontSize}"
                           FontWeight="{Binding IsBold, Converter={StaticResource BoolToFontWeightConverter}}"
                           FontStyle="{Binding IsItalic, Converter={StaticResource BoolToFontStyleConverter}}"
                           TextAlignment="{Binding Alignment, Converter={StaticResource AlignmentToTextAlignmentConverter}}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="{Binding Alignment, Converter={StaticResource TextAlignmentConverter}}"
                           TextWrapping="Wrap"
                           Padding="8,4"/>
            </Border>
        </DataTemplate>
        <!-- TextElement: displays Content -->
        <DataTemplate x:Key="TextElementTemplate">
            <Border Width="{Binding Width}"
                    Height="{Binding Height}"
                    Background="#333333"
                    BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                    BorderThickness="2"
                    MouseDown="OnCanvasElementMouseDown">
                <TextBlock Text="{Binding Content}"
                           Foreground="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}"
                           FontSize="{Binding FontSize}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Padding="8,4"/>
            </Border>
        </DataTemplate>
        <!-- Template for VisualizerElement: live spectrum bitmap -->
        <DataTemplate x:Key="VisualizerElementTemplate">
            <Border Width="{Binding Width}"
                    Height="{Binding Height}"
                    Background="#000000"
                    BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                    BorderThickness="2"
                    MouseDown="OnCanvasElementMouseDown">
                <Image Source="{Binding DataContext.VisualizerBitmapSource, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                       Stretch="Fill"
                       RenderOptions.BitmapScalingMode="LowQuality"/>
            </Border>
        </DataTemplate>
        <views:ElementTemplateSelector x:Key="ElementTemplateSelector"
                                       DefaultTemplate="{StaticResource DefaultElementTemplate}"
                                       VisualizerTemplate="{StaticResource VisualizerElementTemplate}"
                                       TitleTemplate="{StaticResource TitleElementTemplate}"
                                       TextTemplate="{StaticResource TextElementTemplate}"/>
        <!-- Compact outline ratio button for status bar -->
        <Style x:Key="RatioButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2D2E"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Background="#2d2d2d" ToolBarTray.IsLocked="True">
            <Button Content="Title" Command="{Binding AddTitleElementCommand}" Padding="8,4" Background="#007ACC" Foreground="White"/>
            <Button Content="Logo" Command="{Binding AddLogoElementCommand}" Padding="8,4" Background="#007ACC" Foreground="White"/>
            <Button Content="Image" Command="{Binding AddImageElementCommand}" Padding="8,4" Background="#007ACC" Foreground="White"/>
            <Button Content="Visualizer" Command="{Binding AddVisualizerElementCommand}" Padding="8,4" Background="#007ACC" Foreground="White"/>
            <Button Content="Text" Command="{Binding AddTextElementCommand}" Padding="8,4" Background="#007ACC" Foreground="White"/>
            <Separator/>
            <Button Content="Delete" Command="{Binding DeleteSelectedElementCommand}" Padding="8,4" Background="#D32F2F" Foreground="White"/>
            <Button Content="Duplicate" Command="{Binding DuplicateElementCommand}" Padding="8,4" Background="#6F42C1" Foreground="White"/>
            <Separator/>
            <Button Content="Front" Command="{Binding BringToFrontCommand}" Padding="8,4" Background="#FF9800" Foreground="White"/>
            <Button Content="Back" Command="{Binding SendToBackCommand}" Padding="8,4" Background="#FF9800" Foreground="White"/>
            <Separator/>
            <Button Content="Clear" Command="{Binding ClearAllCommand}" Padding="8,4" Background="#D32F2F" Foreground="White"/>
            <CheckBox Content="Grid" IsChecked="{Binding ShowGrid}" Foreground="White" VerticalAlignment="Center"/>
        </ToolBar>

        <!-- Canvas Area: Viewbox scale-to-fit (CapCut style â€” no scrollbars, preview fits in frame) -->
        <Border Grid.Row="1" Background="#1e1e1e" BorderBrush="#404040" BorderThickness="1">
            <Viewbox Stretch="Uniform" StretchDirection="Both">
                <Grid Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}">
                    <Border Background="#2d2d2d" />

                    <!-- GPU-accelerated video preview (MediaElement) -->
                    <!-- Note: Source is set from code-behind, not binding -->
                    <MediaElement x:Name="VideoPreview"
                                  LoadedBehavior="Manual"
                                  ScrubbingEnabled="True"
                                  IsMuted="True"
                                  Stretch="UniformToFill"
                                  Width="{Binding CanvasWidth}"
                                  Height="{Binding CanvasHeight}"
                                  IsHitTestVisible="False"
                                  RenderOptions.BitmapScalingMode="HighQuality"
                                  Visibility="{Binding IsVideoMode, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- Static image preview (fallback) -->
                    <Image Source="{Binding ActiveVisualImage}"
                           Stretch="UniformToFill"
                           Width="{Binding CanvasWidth}"
                           Height="{Binding CanvasHeight}"
                           IsHitTestVisible="False"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Visibility="{Binding IsVideoMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <TextBlock Text="No active visual segment"
                               Foreground="#cccccc"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="#33000000"
                               Padding="12,6"
                               IsHitTestVisible="False"
                               Visibility="{Binding IsVisualPlaceholderVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <Border Background="#80000000"
                            VerticalAlignment="Bottom"
                            Padding="12"
                            IsHitTestVisible="False"
                            Visibility="{Binding IsTextOverlayVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding ActiveTextContent}"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   FontSize="20"/>
                    </Border>

                    <Canvas x:Name="MainCanvas"
                            Background="Transparent"
                            Width="{Binding CanvasWidth}"
                            Height="{Binding CanvasHeight}"
                            MouseDown="OnCanvasMouseDown">
                        <ItemsControl ItemsSource="{Binding Elements}"
                                     ItemTemplateSelector="{StaticResource ElementTemplateSelector}">
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    <Setter Property="Canvas.ZIndex" Value="{Binding ZIndex}"/>
                                    <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Canvas>
                </Grid>
            </Viewbox>
        </Border>

        <!-- Status Bar: message left, ratio button right -->
        <StatusBar Grid.Row="2" Background="#2d2d2d" Foreground="#999999">
            <StatusBarItem HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="12"/>
                    <Button x:Name="RatioButton" Grid.Column="1" Content="{Binding SelectedAspectRatio}" Style="{StaticResource RatioButtonStyle}"
                            Foreground="#999999" Margin="8,0,0,0" Click="RatioButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="9:16" Command="{Binding SetAspectRatioCommand}" CommandParameter="9:16"/>
                                <MenuItem Header="16:9" Command="{Binding SetAspectRatioCommand}" CommandParameter="16:9"/>
                                <MenuItem Header="1:1" Command="{Binding SetAspectRatioCommand}" CommandParameter="1:1"/>
                                <MenuItem Header="4:5" Command="{Binding SetAspectRatioCommand}" CommandParameter="4:5"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
